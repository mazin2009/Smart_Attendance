<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mm_kau.smartattendance.LoginPage"
    tools:layout_editor_absoluteY="81dp">



    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="250dp"
            android:layout_height="140dp"
            android:layout_marginTop="90dp"
            android:layout_gravity="center"
            android:src="@drawable/logo" />

        <EditText
            android:layout_marginTop="90dp"
            android:id="@+id/editTextOfusername"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ems="10"
            android:maxLength="10"
            android:paddingLeft="10dp"
            android:hint="@string/NameOfLogin"
            android:inputType="number" />

        <EditText
            android:paddingLeft="10dp"
            android:id="@+id/editTextOfpassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:maxLength="30"
            android:hint="@string/enterpassord"
            android:inputType="textPassword" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:orientation="horizontal">


            <CheckBox
                android:id="@+id/checkBoxKeepLogIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="keep me looged in" />

            <TextView
                android:id="@+id/forget_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/Forgot"
                android:textColor="@android:color/holo_blue_dark" />


        </LinearLayout>

        <Button
            android:id="@+id/button_log_in"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:textSize="17dp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:background="@drawable/my_button"
            android:text="@string/loginBTN"

            />


    </LinearLayout>
</android.support.constraint.ConstraintLayout>
