<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
android:padding="7dp"
    tools:context="com.example.mm_kau.smartattendance.Manage_Student">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Student ID :"
            android:textColor="#0B614B"
            android:textSize="20sp"

            />

        <TextView
            android:id="@+id/TextForViewStudentID"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="@android:color/black"
            android:hint="Enter Student ID"
            android:maxLength="7"
            android:textSize="20dp" />

        />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editTextFor_S_Fname_manage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:ems="10"
            android:maxLength="20"
            android:hint="First Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTextFor_S_Lname_Manage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:ems="10"
            android:maxLength="20"
            android:hint="Last Name"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewEm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email :"
            android:textColor="#0B614B"
            android:textSize="20sp"
            />

        <EditText
            android:layout_marginTop="5dp"
            android:id="@+id/editText_S_Email_Manage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Email"
            android:maxLength="30"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/textViewPm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set New Password :"
            android:textColor="#0B614B"
            android:textSize="20sp"
            />

        <EditText
            android:id="@+id/editText_S_Pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter New Passowrd"
            android:maxLength="30"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/buttonOfUpdateStudent"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:text="Update Student"
            android:background="@drawable/my_button"
            android:textColor="@android:color/white"
            />

        <Button
            android:id="@+id/buttonOfAddNewCourseForStudent"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="7dp"
            android:text="join New Course"
            android:background="@drawable/my_button"
            android:textColor="@android:color/white"
            />


        <Button
            android:id="@+id/buttonOfDeleteStudent"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="7dp"
            android:text="Delete Student"
            android:background="@drawable/my_button_orange"
            android:textColor="@android:color/black"

            />

    </LinearLayout>


</LinearLayout>
